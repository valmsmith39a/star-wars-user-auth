extends layout

block content
  h1#login-text Login
  form
    .form-group
      label#login-text(for='email') Email address
      input#email.form-control(type='email', placeholder='Email')
    .form-group
      label#login-text(for='password') Password
      input#password.form-control(type='password', placeholder='Password')
    button.btn.btn-default(type='submit') Login

block scripts
  script(src="/js/login.js")
